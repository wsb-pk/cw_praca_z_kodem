name: Travis-test

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:

  build:

    runs-on: ubuntu-latest

    steps:
    language: python
    python: "3.9"
    services:
      - docker

    install:
      - pip install -r requirements.txt

    script:
      - echo 'start docker build'
      - docker build -t flask-app .
      - echo 'finish docker build'
